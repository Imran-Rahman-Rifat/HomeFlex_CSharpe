@model HomeFlex.ViewModels.PropertyViewModel

@{
    ViewBag.Title = "Create Property";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<h2>Create Property</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-info">@ViewBag.Message</div>
}

</br> </br> </br> </br>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ShortDescription"></label>
        <textarea asp-for="ShortDescription" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="WhomToRent"></label>
        <select asp-for="WhomToRent" class="form-control">
            <option value="" disabled selected>Select an option</option>
            <option value="Family">Family</option>
            <option value="Bachelor">Bachelor</option>
            <option value="Any">Any</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="TotalRoom"></label>
        <input asp-for="TotalRoom" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="BedroomNum"></label>
        <input asp-for="BedroomNum" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="BathroomNum"></label>
        <input asp-for="BathroomNum" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Sqft"></label>
        <input asp-for="Sqft" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="FloorNo"></label>
        <input asp-for="FloorNo" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Lift"></label>
        <select asp-for="Lift" class="form-control">
            <option value="" disabled selected>Select an option</option>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="AvailableDate"></label>
        <input asp-for="AvailableDate" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label asp-for="Division"></label>
        <select asp-for="Division" class="form-control">
            <option value="" disabled selected>Select an option</option>
            <option>Dhaka</option>
            <option>Chattogram</option>
            <option>Barisal</option>
            <option>Khulna</option>
            <option>Rajshahi</option>
            <option>Rangpur</option>
            <option>Mymensingh</option>
            <option>Sylhet</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="District"></label>
        <input asp-for="District" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Thana"></label>
        <input asp-for="Thana" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="WardNo"></label>
        <input asp-for="WardNo" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="HouseNo"></label>
        <input asp-for="HouseNo" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="TitleImage"></label>
        <input asp-for="TitleImage" class="form-control-file" type="file" />
    </div>
    <div class="form-group">
        <label asp-for="BedroomImage"></label>
        <input asp-for="BedroomImage" class="form-control-file" type="file" />
    </div>
    <div class="form-group">
        <label asp-for="BathroomImage"></label>
        <input asp-for="BathroomImage" class="form-control-file" type="file" />
    </div>
    <div class="form-group">
        <label asp-for="KitchenImage"></label>
        <input asp-for="KitchenImage" class="form-control-file" type="file" />
    </div>
    <div class="form-group">
        <label asp-for="AdditionalImage"></label>
        <input asp-for="AdditionalImage" class="form-control-file" type="file" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>